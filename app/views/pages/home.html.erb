<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.0),rgba(0,0,0,0.0)), url(<%= asset_path 'E-PLANNERE.gif' %>);">

    <p class="ml9">
      <span class="text-wrapper">
        <span class="letters">
          Our Innovation Is Your Perfect Event Solution
        </span>
      </span>
    </p>

    <br>
    <br>
    <br>
    <br>
    <div class="d-flex gap-2 justify-content-center text-center">
        <% if current_user %>
          <%= link_to "See Events", "/events", class: "btn btn-ghost" %>
          <%= link_to "Create Event", "#", class: "btn btn-ghost" %>
        <% end %>
    </div>
  </div>
</div>
<div class="text-center container upcoming-events pt-5 pb-5 pr-3 w-auto mb-3 mt-5 border border-warning">
  <h2>UPCOMING EVENTS</h2>
    <div class="h-divider w-50 mt-2 mb-5">
    <div class="shadow"></div>
  </div>
  <div class="latest-event">
    <div class="card-products-container d-flex justify-content-center mt-3">
      <% @mostrecentevent.each do |event| %>
        <div class="card-product" style="background-image:  linear-gradient(to right, rgba(0,0,0,1),rgba(0,0,0,0)), url(<%= cl_image_path event.photo.key if event.photo.attached? %>)">
          <div class="overlay">
            <div class="card-product-infos">
              <div class="head">
                <h2><%= event.title %></h2>
              </div>
                <div class="details">

                  <div style="margin-bottom: 15px;">
                    <i class="fa-solid fa-calendar-days"></i>
                    <%= event.start_date %> to <%= event.end_date %>
                  </div>


                  <div style="margin-bottom: 15px;">
                    <i class="fa-solid fa-location-dot"></i>
                    <%= event.location %>
                  </div>

                  <div style="margin-bottom: 15px;">
                    <i class="fa-solid fa-ticket"></i>
                    Rs <%= event.price %>
                  </div>

                  <div style="margin-bottom: 15px;">
                    Available places : <%= event.slot %>
                  </div>

                </div>
              <div>
                <%= link_to "Go To Event", event, class:"btn btn-ghost " %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="container text-center pt-5 pb-5 w-75 justify-content-center pb-7 mb-5 mt-5 border border-warning bg-light">
