<%= simple_form_for(@event) do |f| %>
  <div class="container form-group bg-dark text-white px-5 py-4 my-3" style="width: 60%" >
  <div class="text-center pb-3"><h1>Create your event</h1> <p>Please fill in this form below:</p></div>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :location %>
    <%= f.input :price %>
    <%= f.input :category %>
    <%= f.input :slot %>
    <%= f.input :contact %>
    <%= f.input :photos, as: :file, label: "Event Photos", input_html: { multiple: true } %>
     <%= f.input :photo, as: :file, label: "Event Poster" %>
      <div class="form-actions pb-2">
        <%= f.button :submit, class: 'btn btn-ghost' %>
        <%= link_to "Back to events", events_path, class: 'btn btn-ghost' %>
      </div>
  </div>
<% end %>
