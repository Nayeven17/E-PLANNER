<div class="container container-background">
  <h1>All Events</h1>

<br>

<div class="card-products-container">
  <% @events.each do |event| %>
  <div class="card-product">
  <img src="https://images.unsplash.com/photo-1459749411175-04bf5292ceea?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80">
  <div>
    <div class="card-product-infos ">
      <h2><%= event.title %></h2>
      <p> <%= event.start_date %> to <%= event.end_date %></p>
      <p><%= event.location %></p>
      <p><%= event.price %></p>
    </div>
    <div>
    <%= link_to "Go To Event", event, class: "btn btn-ghost" %>
    </div>
    </div>
  </div>
  <% end %>
</div>

