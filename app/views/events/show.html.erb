<div class="event-show">
  <div class="container text-center">
    <div cover mb-4 d-flex align-items-center justify-content-center>
        <h1>Event Details</h1>
          <div class="d-flex row justify-content-center">
            <div class="col-lg-4">
              <div class="card bg-light my-3">
                <div class="card-body d-flex align-items-center">
                  <h2 class="card-title fw-bolder"> <%= @event.title %>
                </div>
                  <div>
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item"> Title: <%= @event.title %>
                      <li class="list-group-item"> Description: <%= @event.description %></li>
                      <li class="list-group-item"> Start Date: <%= @event.start_date %></li>
                      <li class="list-group-item"> End Date: <%= @event.end_date %></li>
                      <li class="list-group-item"> Location: <%= @event.location %></li>
                      <li class="list-group-item"> Price: <%= @event.price %> MUR</li>
                      <li class="list-group-item"> Slot: <%= @event.slot %></li>
                      <li class="list-group-item"> Contact: <%= @event.contact %></li>
                      <li class="list-group-item"> Category: <%= @event.category %></li>
                    </ul>
                  </div>
              </div>
            </div>
          </div>
      </div>
    </div>

  <div class="d-flex row justify-content-center">
    <div class="col-lg-3">
        <div class="card bg-light my-3">
            <div class="card-body d-flex align-items-center">
              <div class="container new-booking-form">
                <h2>Number of persons:</h2>
                  <%= simple_form_for [@event, @booking] do |f| %>
                  <%= f.input :pax, as: :integer %>
                  <%= f.button :submit, "Book here", class:"btn btn-primary nomad-button" %>
                  <% end %>
              </div>
            </div>
        </div>
    </div>
  </div>
<br>
  <%= link_to "Back to events", events_path, class:"btn btn-primary nomad-button" %>
  <br>
  <br>
</div>
