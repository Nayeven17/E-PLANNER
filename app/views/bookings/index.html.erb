<div class="bg-image shadow-2-strong"
     style="background-image: url('https://images.unsplash.com/photo-1501281668745-f7f57925c3b4?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80'); height: 100vh;">
  <div class="mask" style="background-color: rgba(0, 0, 0, 0.7); height: 100vh;">
    <div class="container-booking">
      <h1 class="mb-4">MY BOOKINGS</h1>
    <table class="table table-hover">
      <% @bookings.reverse_each do |booking| %>
        <% if current_user == booking.user %>
        <tr>
          <td>Title: <%= booking.event.title %></td>
          <td>Start Date: <%= booking.event.start_date %></td>
          <td>End Date: <%= booking.event.end_date %></td>
          <td>Description: <%= booking.event.description %></td>
          <td>Price: <%= booking.event.price %></td>
          <td>Location: <%= booking.event.location %></td>
          <td>Number of tickets: <%= booking.pax %></td>
          <td><!-- app/views/restaurants/show.html.erb -->
          <%= link_to "",
          booking_path(booking), class:"fas fa-trash-alt",
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></td>
          <%if booking.pax%>
          <td>TOTAL : RS <%= booking.pax * booking.event.price %></td>
          <% end %>
        </tr>
        <% end %>
      <%end %>


    </table>
    <div class="d-flex gap-2 justify-content-center text-center">
      <%= link_to 'Go back',:back, class: 'btn btn-booking' %>

    <div class="btn btn-booking">
      <div id="myBtn">Confirm booking</div>
    </div>

  </div>
</div>

<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <p>CONGRATULATION !</p>
    <p>YOUR BOOKING IS NOW CONFIRMED</p>
    <i class="fa fa-check" style="font-size:50px;color:green"></i>
    <div class="center">
     <%= link_to 'Back to events', events_path, class: 'btn btn-booking' %>

    </div>
  </div>
</div>

<script>
// Get the modal
var modal = document.getElementById('myModal');

// Get the button that opens the modal
var btn = document.getElementById("myBtn");

// Get the <span> element that closes the modal
var span = document.getElementsByClassName("close")[0];

// When the user clicks the button, open the modal
btn.onclick = function() {
    modal.style.display = "block";
}

// When the user clicks on <span> (x), close the modal
span.onclick = function() {
    modal.style.display = "none";
}

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}
</script>
